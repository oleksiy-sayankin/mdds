{
  "info": {
    "_postman_id": "mdds-e2e-initial",
    "name": "MDDS E2E - basic smoke",
    "description": "Smoke-test MDDS: check for root / and /health",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET / returns index.html",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "text/html"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/",
          "host": [
            "{{baseUrl}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Body contains <html\", function () {",
              "  pm.expect(pm.response.text()).to.include('<html');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "GET /health returns 200",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "health"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}
